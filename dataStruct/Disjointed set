int getFather(int x)
{
    if (fa[x] != x)
    {
        fa[x] = getFather(fa[x]);
        return fa[x];
    }
    else return x;
}

void union_(int x, int y)
{
    int faX = getFather(x), faY = getFather(y);
    if (weight[faX] < weight[faY])
        fa[faX] = faY, weight[faY] += weight[faX];
    else fa[faY] = faX, weight[faX] += weight[faY];
}

for (int i = 0; i < maxn; i++) fa[i] = i, weight[i] = 1;
